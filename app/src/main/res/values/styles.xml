<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomToolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomOptionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="CustomHeaderTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/screen_header_text_size</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="CustomCongratulationParagraph" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>
</resources>